{% extends 'base.html.twig' %}

{% block title %}Se connecter
{% endblock %}

{% block body %}
	<div class="form-container">
		<h1 class="form-title">Se connecter</h1>

		<form method="post" class="login-form">

			{% if error %}
				<div class="alert alert-danger">
					{{ error.messageKey|trans(error.messageData, 'security') }}
				</div>
			{% endif %}

			<div class="form-group icon-input">
				<span class="icon">✉️</span>
				<input type="email" name="email" id="inputEmail" class="form-input" placeholder="Adresse e-mail" required>
			</div>

			<div class="form-group icon-input">
				<span class="icon">🔒</span>
				<input type="password" name="password" id="inputPassword" class="form-input" placeholder="Mot de passe" required>
			</div>

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			<p class="form-footer-text">
				Vous n’avez pas de compte ?
				<a href="{{ path('app_register') }}">Inscrivez-vous ici</a>
			</p>

			<button class="btn-submit" type="submit">S’identifier</button>
		</form>
	</div>
{% endblock %}
