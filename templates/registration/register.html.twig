{% extends 'base.html.twig' %}

{% block body %}
	<div class="form-container">
		<h1 class="form-title">S'inscrire</h1>
		<p class="form-subtitle">Créez votre compte rapidement en complétant les champs ci-dessous.</p>

		{{ form_start(registrationForm, { 'attr': {'class': 'registration-form'} }) }}

		<div class="form-group icon-input">
			<span class="icon">👤</span>
			{{ form_widget(registrationForm.lastName, {'attr': {'placeholder': 'Nom', 'class': 'form-input'}}) }}
		</div>

		<div class="form-group icon-input">
			<span class="icon">👤</span>
			{{ form_widget(registrationForm.firstName, {'attr': {'placeholder': 'Prénom', 'class': 'form-input'}}) }}
		</div>

		<div class="form-group icon-input">
			<span class="icon">📞</span>
			{{ form_widget(registrationForm.phone, {'attr': {'placeholder': 'Numéro de téléphone', 'class': 'form-input'}}) }}
		</div>

		<div class="form-group icon-input">
			<span class="icon">✉️</span>
			{{ form_widget(registrationForm.email, {'attr': {'placeholder': 'Adresse e-mail', 'class': 'form-input'}}) }}
		</div>

		<div class="form-group icon-input">
			<span class="icon">🔑</span>
			{{ form_widget(registrationForm.plainPassword.first, {'attr': {'placeholder': 'Mot de passe', 'class': 'form-input'}}) }}
		</div>

		<div class="form-group icon-input">
			<span class="icon">🔒</span>
			{{ form_widget(registrationForm.plainPassword.second, {'attr': {'placeholder': 'Confirmer le mot de passe', 'class': 'form-input'}}) }}
		</div>

		<div class="form-group checkbox-group">
			{{ form_widget(registrationForm.agreeTerms) }}
			<label for="{{ registrationForm.agreeTerms.vars.id }}">J’accepte les conditions</label>
		</div>

		<p class="form-footer-text">Vous avez déjà un compte ?
			<a href="{{ path('app_login') }}">Identifiez-vous ici</a>
		</p>

		<button type="submit" class="btn-submit">Créer un compte</button>

		{{ form_end(registrationForm) }}
	</div>
{% endblock %}
